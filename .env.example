# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
APP_ENV=development
DEBUG=true
SECRET_KEY=super-secret-key-change-me   # for JWT/session signing

# -----------------------------------------------------------------------------
# Database (Postgres - async URL)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://postgres:password123@localhost:5432/dhan_trading
DATABASE_ECHO=false

# -----------------------------------------------------------------------------
# Broker (Dhan API)
# -----------------------------------------------------------------------------
DHAN_BASE_URL=https://api.dhan.co
DHAN_TRADING_CLIENT_ID=your_trading_client_id
DHAN_TRADING_ACCESS_TOKEN=your_trading_access_token_here

DHAN_DATA_CLIENT_ID=your_data_client_id_here
DHAN_DATA_ACCESS_TOKEN=your_data_access_token_here

DHAN_SANDBOX=true   # switch to false in production

# -----------------------------------------------------------------------------
# Telegram Bot
# -----------------------------------------------------------------------------
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
